    "def solution(num):\n",
    "    n = 0\n",
    "    while True :\n",
    "        if num == 1 :\n",
    "            break\n",
    "        elif n == 500 :\n",
    "            n = -1\n",
    "            break\n",
    "        elif num % 2 == 0 :\n",
    "            num /= 2\n",
    "        else :\n",
    "            num = num * 3 + 1\n",
    "        n += 1\n",
    "    return n"
